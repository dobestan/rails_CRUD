<h1>Posts#edit</h1>
<form action="/posts/update/<%= @post.id %>" method="get">
    <h3>Title : </h3>
    <input type="text" name="title" value="<%= @post.title %>" /><br>

    <h3>Body : </h3>
    <textarea name="body"  cols="30" rows="10"><%= @post.body %></textarea><br>
    <input type="submit" value="update" />
</form>
