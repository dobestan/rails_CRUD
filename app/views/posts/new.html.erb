<h1>Posts#new</h1>
<form action="/posts/create" method="post">
    <% if @post.errors.any? %>
        <div id="error">
            <ul>
                <% @post.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul> 
        </div>
    <% end %>
    
    <h3>Title : </h3>
    <input type="text" name="title" /><br>

    <h3>Body : </h3>
    <textarea name="body"  cols="30" rows="10"></textarea><br>
    <input type="submit" value="publish" />
</form>
